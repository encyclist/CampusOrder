<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.CustomCaptureActivity">

    <cn.simonlee.xcodescanner.view.AdjustTextureView
        android:id="@+id/mTextureView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <cn.simonlee.xcodescanner.view.ScannerFrameView
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:id="@+id/mScannerFrameView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:frame_whRatio="1"
        app:frame_widthRatio="0.7"
        app:scan_cycle="1500" />

</RelativeLayout>